---
const { links } = Astro.props;
---

    <div class="list" id="link-list">
        {
            links.map((link: { name: string; src: string }) => {
                return (<div class="list-item">
                    <div class="list-item-content">
                        <div class="list-item-title">{link.name}</div>
                        <div class="list-item-description is-flex is-justify-content-space-between">
                            <a href={link.src}>{link.src}</a>
                        </div>
                    </div>
                </div>
                )
            })
        }
    </div>
