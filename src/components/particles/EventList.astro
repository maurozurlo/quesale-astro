---
const { events, orientation = "vertical" } = Astro.props;
import './EventList.scss'
import Card from '../Card.astro'
---

{
  orientation === "vertical" ? (
    <div class="list">
      {events.map((evt) => {
        return (
          <div class="list-item">
            <div class="list-item-image">
              <figure class="image is-64x64">
                <img class="is-rounded" src={evt.coverImage} alt={evt.title} />
              </figure>
            </div>
            <div class="list-item-content">
              <div class="list-item-title">
                <a href={evt.coverImage}>{evt.title}</a>
              </div>
              <div class="list-item-description is-flex is-justify-content-space-between">
                <div class="location">{evt.location}</div>
                <div class="date">{evt.date}</div>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  ) : (
    <div>
  <div class="event-container">
      {events.map((evt) => {
        return (
            <div class="event-card">
        <Card {...evt} isSmall={true}/>
    </div>
        );
      })}
    </div>
</div>
  )
}
